echo 'Styling, testing and building your project before committing...'

# Check Prettier
npm run check-format || {
    echo 'Prettier check failed. Run npm run format , add changes and try commit again.';
    false;
}

npm run check-lint || {
    echo 'ESLint check failed. Make the required changes listed above, add changes and try commit again.';
    false;
}

npm run check-types || {
    echo 'Failed type check. Make the required changes listed above, add changes and try commit again.';
    false;
}

npm run build || {
    echo "Your build failed. Please check the errors above and try again.";
    false;
}

echo "Success! Your project is ready to be committed.";